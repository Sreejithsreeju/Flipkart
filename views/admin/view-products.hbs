<section>
    <div class="container">
        <div class="row" >
            <a href="/admin/add-product" class="btn btn-success ml-auto mt-5">Add Product</a>
        </div>
        <table class="table mt-4">
  <thead>
    <tr>
      <th scope="col">No.</th>
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th>Image</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Description}}</td>
      <td><img src="/product-images/{{this._id}}.jpg" alt="img" style="width:50px; height:auto"></td>
      <td><a href="/admin/edit-product/{{this._id}}" class="btn btn-info">EDIT</a>
      <a href="/admin/delete-product?id={{this._id}}&name={{this.Name}}" class="btn btn-danger" onclick=" return confirm('Are you want to delete {{this.Name}}')">DELETE</a></td>
    </tr>
    {{/each}}
    
  </tbody>
</table>
    </div>
</section>